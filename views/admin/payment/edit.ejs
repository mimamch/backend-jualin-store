<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Ubah Bank "<%= payment.namaPemilik %> | <%=
                payment.namapayment %>"
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%= payment._id %>?_method=put" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="tipe">Masukkan Tipe Metode Pembayaran</label>
                  <input
                    type="text"
                    name="tipe"
                    class="form-control"
                    id="tipe"
                    placeholder="Masukkan Tipe Pembayaran"
                    value="<%= payment.tipe %>"
                  />
                </div>
                <div class="form-group">
                  <label for="bank">Pilih Bank</label>
                  <div class="select2-purple">
                    <select
                      name="banks"
                      class="form-control select2"
                      multiple="multiple"
                      id="banks"
                      data-placeholder="Pilih bank"
                      style="width: 100%"
                    >
                    <% bank.forEach((j)=>{ %>
                      <option value="<%= j.id %>"
                        <% payment.banks.forEach((e) =>{ 
                          if(e.id == j.id){%>
                            selected
                            <%}%>
                          <%}) %>
                        >
                        <%= j.namaPemilik %> || <%= j.namaBank %> || <%= j.noRekening %>
                      </option>
                      <%})%>
                    </select>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
