<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Voucher</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Ubah Voucher "<%= voucher.nama %>"
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/voucher/edit/<%=voucher._id%>?_method=put"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="nama">Masukkan Nama Game</label>
                  <input
                    type="text"
                    name="nama"
                    class="form-control"
                    value="<%= voucher.nama %>"
                    id="nama"
                    placeholder="Masukkan Nama Game"
                  />
                </div>
                <div class="form-group">
                  <label for="category">Pilih Kategori</label>
                  <select
                    name="category"
                    class="form-control select2"
                    id="category"
                    data-placeholder="Pilih Category"
                    style="width: 100%" required
                  >
                    <% category.forEach((i)=>{ %>
                    <option value="<%= i.id %>" 
                      <%
                      if(voucher.category.id == i.id.toString() ){%>
                      selected
                      <%}%>
                      ><%= i.nama %></option>
                    <%})%>
                  </select>
                </div>
                <div class="form-group">
                  <label for="nominal">Pilih Nominal</label>
                  <div class="select2-purple">
                    <select
                      multiple="multiple"
                      name="nominal"
                      class="form-control select2"
                      id="nominal"
                      data-placeholder="Pilih Nominal"
                      style="width: 100%"
                      required
                    >
                      <% nominal.forEach((j)=>{ %>
                      <option value="<%= j.id %>"
                        <% voucher.nominals.forEach((e) =>{ 
                          if(e.id == j.id){%>
                            selected
                            <%}%>
                          <%}) %>
                        >
                        <%= j.coinName %> <%= j.price %>
                      </option>
                      <%})%>
                    </select>
                  </div>
                </div>
               
                <div class="form-group">
                  <label for="image">Masukkan Gambar</label>
                  <input
                    type="file"
                    name="image"
                    class="form-control"
                    id="image"
                    placeholder="Masukkan"
                  />
                  <br />
                  <img style="max-width: 200px;" src="http://localhost:3000/uploads/<%= voucher.thumbnail %>" id="preview" />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>

<script>
  function readFile(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $("#preview").attr("src", e.target.result);
        $("#preview").attr("width", "250px");
        // $('#preview').attr('height', e.target.result)
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  $("#image").on("change", function () {
    readFile(this);
  });
</script>