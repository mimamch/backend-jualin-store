<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Kategori</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Ubah Bank "<%= bank.namaPemilik %> | <%= bank.namaBank %>"
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="namaPemilik">Masukkan Nama Pemilik</label>
                  <input
                    type="text"
                    name="namaPemilik"
                    class="form-control"
                    id="namaPemilik"
                    value="<%= bank.namaPemilik %>"
                    placeholder="Masukkan Nama Koin"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="namaBank">Masukkan Nama Bank</label>
                  <input
                    type="text"
                    name="namaBank"
                    class="form-control"
                    id="namaBank"
                    placeholder="Masukkan Nama Bank"
                    value="<%=bank.namaBank%>"
                  />
                </div>
                <div class="form-group">
                  <label for="noRekening">Masukkan No Rekening</label>
                  <input
                    type="text"
                    name="noRekening"
                    class="form-control"
                    id="noRekening"
                    placeholder="Masukkan No Rekening"
                    value="<%=bank.noRekening%>"
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
